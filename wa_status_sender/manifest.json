{
    "manifest_version": 2,
    "name":    "test",
    "version": "0.0.1",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["content.js"],
        "run_at":    "document_start"
    }],
    "browser_action": {
        "default_title": "Test Extension",
        "default_popup": "popup.html"
    },
    "permissions": [
      "webNavigation",
      "notifications",
      "storage",
      "https://web.whatsapp.com/"
      ]
}